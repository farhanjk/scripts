set clipboard=unnamed
syntax on
set ignorecase
set smartcase
set incsearch
set backspace=indent,eol,start
set ruler 
map 1 <c-$>
inoremap <left> <nop>
inoremap <right> <nop>
inoremap <up> <nop>
inoremap <down> <nop>

nnoremap x "_x
nnoremap d "_d
nnoremap D "_D
vnoremap d "_d

nnoremap <leader>d ""d
nnoremap <leader>D ""D
vnoremap <leader>d ""d

let mapleader = ","
let g:mapleader = ","

